{
   "version": "0.2.0",
   "configurations": [
      {
         "name": "Debug C++ Program",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceFolder}/cpp/tuts.exe", // Executable
         "args": [],
         "stopAtEntry": false,
         "cwd": "${workspaceFolder}/cpp", // Working directory
         "environment": [],
         "externalConsole": true, // Set to true for an external console
         "MIMode": "gdb",
         "miDebuggerPath": "C:\\mingw64\\bin\\gdb.exe", // Adjust path if needed
         "setupCommands": [
            {
               "description": "Enable pretty-printing for gdb",
               "text": "-enable-pretty-printing",
               "ignoreFailures": true
            }
         ],
         "preLaunchTask": "build", // This is the name of the task in tasks.json
         "logging": {
            "engineLogging": false
         }
      }
   ]
}
